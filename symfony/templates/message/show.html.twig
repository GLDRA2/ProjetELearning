{% extends 'base.html.twig' %} {% block stylesheets %}

<link rel="stylesheet" href="{{ asset('css/chat.css') }}" />
{% endblock %} {% block body %}

<!--================Home Banner Area =================-->
<section class="banner_area">
  <div class="banner_inner d-flex align-items-center">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <div class="banner_content text-center">
            <h2 class="text-warning" style="text-transform: uppercase">
              <strong>COURS PRIVATE MESSAGE</strong>
            </h2>
            <div class="page_link">
              <a href="index.html" class="text-warning">MESSAGE</a>
              <a href="courses.html" class="text-warning"
                >COURS PRIVATE MESSAGE</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<br />
<div class="container-fluid h-100">
  <div class="row justify-content-center h-100">
    <div class="col-md-4 col-xl-3 chat">
      <div class="card mb-sm-3 mb-md-0 contacts_card">
        <div class="card-body contacts_body">
          <!-- user -->
          <ui class="contacts">
            {% for user in groupe.users %}
            <!-- one contact -->
            <li>
              <div class="d-flex bd-highlight">
                <div class="img_cont">
                  <img
                    src="https://2.bp.blogspot.com/-8ytYF7cfPkQ/WkPe1-rtrcI/AAAAAAAAGqU/FGfTDVgkcIwmOTtjLka51vineFBExJuSACLcBGAs/s320/31.jpg"
                    class="rounded-circle user_img"
                  />
                </div>
                <div class="user_info">
                  <span>{{ user.username }}</span>
                  {#
                  <p>Taherah left 7 mins ago</p>
                  #}
                </div>
              </div>
            </li>
            {% endfor %}

            <!--=================================-->
          </ui>
          <!--======================================-->
        </div>
      </div>
    </div>
    <div class="col-md-8 col-xl-6 chat">
      <div class="card">
        <div class="card-header msg_head">
          <div class="d-flex bd-highlight">
            <div class="img_cont">
              <img
                src="https://static.turbosquid.com/Preview/001292/481/WV/_D.jpg"
                class="rounded-circle user_img"
              />
            </div>
            <div class="user_info">
              <span>{{ groupe.name }}</span>
              <p>1767 Messages</p>
            </div>
          </div>
        </div>
        <div class="card-body msg_card_body">
          {% for message in groupe.messages %}
          <!-- message -->
          <div class="d-flex justify-content-start mb-4">
            <div class="img_cont_msg">
              <img
                src="https://static.turbosquid.com/Preview/001292/481/WV/_D.jpg"
                class="rounded-circle user_img_msg"
              />
            </div>
            <div class="msg_cotainer">
              <span style="color: white; text-transform: uppercase"
                ><strong>{{ message.user.username }} SAID: </strong></span
              >
              &nbsp;{{ message.content }}
              <span class="msg_time">8:40 AM, Today</span>
            </div>
          </div>
          {% endfor %}
          <!--======================================-->
        </div>
      </div>
    </div>
  </div>
</div>
<a href="{{ path('groupe_show', { id: groupe.id }) }}">back to profil</a>
{% endblock %} {% block JavaScript %}
<script>
  $(document).ready(function () {
    $("#action_menu_btn").click(function () {
      $(".action_menu").toggle();
    });
  });
</script>
{% endblock %}

{% extends "base.html.twig" %} {% form_theme form 'bootstrap_4_layout.html.twig'
%} {% block body %}

<!--================Home Banner Area =================-->
<section class="banner_area">
  <div class="banner_inner d-flex align-items-center">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <div class="banner_content text-center">
            <h2 class="text-warning">INSCRIPTION</h2>
            <div class="page_link">
              <a href="index.html" class="text-warning">Home</a>
              <a href="courses.html" class="text-warning">INSCRIPTION</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!--================End Home Banner Area =================-->

<section
  class="hero-wrap hero-wrap-2"
  style="background-image: url('template/fox-master/images/bg_1.jpg')"
>
  <div class="container">
    <div
      class="row no-gutters slider-text align-items-center justify-content-center"
    >
      <div class="col-md-9 ftco-animate text-center">
        {% if app.user %}
        <div class="mb-3">
          You are logged in as {{ app.user.username }},
          <a href="{{ path('app_logout') }}">Logout</a>
        </div>
        {% else %}
        {{ form_start(form,{'attr':{'novalidate':""}}) }}

        {{ form_widget(form) }}

        <button type="submit" class="btn btn-warning btn-lg btn-block">
          Inscription !
        </button>

        {{ form_end(form) }}

        {% endif %}
      </div>
    </div>
  </div>
</section>

{% endblock %}
